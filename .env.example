# Database Configuration
DATABASE_TYPE=sqlite  # sqlite, mysql

# SQLite Configuration
DATABASE_PATH=./database.sqlite

# MySQL Configuration
# DATABASE_TYPE=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=cms_platform
# DATABASE_USER=cms_user
# DATABASE_PASSWORD=your_password

# Prisma Configuration
DATABASE_URL="file:./dev.db"
# For MySQL: DATABASE_URL="mysql://username:password@localhost:3306/mydb"

# Application Settings
APP_ENV=development  # development, production
APP_DEBUG=true
APP_URL=http://localhost:5173

# API Settings
API_URL=http://localhost:8000

# JWT Settings
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=86400  # 24 hours in seconds

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

# File Upload Settings
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,zip
UPLOAD_PATH=./uploads

# Plugin Settings
PLUGIN_DIRECTORY=./plugins
PLUGIN_MARKETPLACE_URL=https://marketplace.example.com/api

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds

# Mail Settings
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="CMS Platform"
